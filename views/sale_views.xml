<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="imporgesa_sale_order_form" model="ir.ui.view">
        <field name="name">imporgesa.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Transacciones">
                    <group>
                        <field name="transaccion_ids" context="{'venta_id': id}">
                          <tree editable="bottom">
                            <field name="forma_pago_id"/>
                            <field name="banco_id"/>
                            <field name="numero_transaccion"/>
                            <field name="monto"/>
                          </tree>

                        </field>
                    </group>
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total_transaccion" />
                                    </div>
                                    <field name="total_transaccion" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <div class="oe_clear"/>
                </page>
            </xpath>

      </field>

  </record>

</odoo>
